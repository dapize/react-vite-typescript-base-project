{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /*My configs*/
    "baseUrl": "./src",
    "types": ["node", "@testing-library/jest-dom"],
    "paths": {
      "@assets/*":["assets/*"],
      "@components/*": ["components/*"],
      "@helpers/*":["helpers/*"],
      "@hooks/*":["hooks/*"],
      "@i18n/*":["i18n/*"],
      "@pages/*": ["pages/*"],
      "@routes/*":["routes/*"],
      "@services/*":["services/*"],
      "@utils/*":["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["vitest.setup.ts", "**/*.index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
