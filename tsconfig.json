{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@assets":["assets"],
      "@assets/*":["assets/*"],
      "@helpers":["helpers"],
      "@helpers/*":["helpers/*"],
      "@utils":["utils"],
      "@utils/*":["utils/*"],
      "@services":["services"],
      "@services/*":["services/*"],
      "@hooks":["hooks"],
      "@hooks/*":["hooks/*"],
      "@data":["data"],
      "@data/*":["data/*"],
      "@context":["context"],
      "@context/*":["context/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
